<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:androi="http://schemas.android.com/apk/res-auto">



    <!-- Allows the user to choose a ringtone in the 'notification' category. -->
    <!-- NOTE: This preference will be enabled only when the checkbox above is checked. -->
    <!-- NOTE: RingtonePreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:key="Tops"
        android:title="@string/standard_tops"
        android:entries="@array/sizes_text"
        android:entryValues="@array/sizes_text"
        />

    <ListPreference
        android:key="Pants"
        android:title="@string/standard_pants"
        android:entries="@array/sizes_text"
        android:entryValues="@array/sizes_text"
        />

    <ListPreference
        android:key="Shoes"
        android:title="@string/standard_shoes"
        android:entries="@array/sizes_shoes_text"
        android:entryValues="@array/sizes_shoes_text"
        />


</PreferenceScreen>
