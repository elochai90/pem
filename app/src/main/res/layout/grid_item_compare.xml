<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gridItemView"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardBackgroundColor="@color/listItems">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.gruppe1.pem.challengeme.SquareImageView
            android:id="@+id/imageItem1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"/>

        <com.gruppe1.pem.challengeme.SquareImageView
            android:id="@+id/imageItem2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/imageItem1"
            android:layout_centerHorizontal="true"/>


        <TextView
            android:id="@+id/compareName"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:gravity="center_vertical"
            android:layout_alignBottom="@id/imageItem2"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:background="@color/grey_transparent"/>


    </RelativeLayout>
</android.support.v7.widget.CardView>