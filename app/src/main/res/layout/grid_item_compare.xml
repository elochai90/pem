<android.support.v7.widget.CardView android:id="@+id/gridItemView"
   xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:card_view="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:layout_height="200dp"
   android:background="@drawable/selector_list_item"
   card_view:cardCornerRadius="0dp"
   card_view:cardUseCompatPadding="true">

   <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <RelativeLayout
         android:id="@+id/blur_background_container"
         android:layout_width="match_parent"
         android:layout_height="match_parent">

         <ImageView
            android:id="@+id/blur_background_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />
      </RelativeLayout>
      <LinearLayout
         android:id="@+id/image_container"
         android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:orientation="vertical"
         android:layout_centerHorizontal="true"
         android:weightSum="2">

         <ImageView
            android:layout_weight="1"
            android:id="@+id/imageItem1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>

         <ImageView
            android:layout_weight="1"
            android:id="@+id/imageItem2"
            android:layout_width="wrap_content"
            android:layout_height="0dp" />


      </LinearLayout>


      <RelativeLayout
         android:id="@+id/text_container"
         android:layout_width="match_parent"
         android:layout_height="68dp"
         android:paddingLeft="@dimen/activity_vertical_margin"
         android:paddingTop="@dimen/activity_vertical_margin"
         android:paddingBottom="@dimen/activity_vertical_margin"
         android:orientation="horizontal"
         android:background="@drawable/background_grid_item"
         android:layout_alignBottom="@id/image_container">


         <ImageView
            android:id="@+id/ic_more"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/ic_more_white"/>
         <TextView
            android:id="@+id/compareName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/ic_more"
            android:singleLine="true"
            android:textColor="@color/primary_text_light"
            android:textSize="16sp" />
         <TextView
            android:id="@+id/rightTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/compareName"
            android:textColor="@color/secondary_text_light"
            android:textSize="12sp" />
      </RelativeLayout>

   </RelativeLayout>
</android.support.v7.widget.CardView>