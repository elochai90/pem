<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/noWeatherAvailable"
        android:visibility="gone"
        android:background="@color/blue01"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/noWeatherAvailableText"
            android:textColor="@color/gray05"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/noWeatherAvailableText"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/weatherAvailable"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="0.43">


                <RelativeLayout
                    android:id="@+id/weather"
                    android:layout_width="match_parent"
                    android:layout_height="150dp">

                    <ImageView
                        android:id="@+id/navDrawerWeatherImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/nav_drawer_desc_weatherImage" />

                    <RelativeLayout
                        android:padding="10dp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/grey_transparent">

                        <TextView
                            android:id="@+id/navDrawerWeatherDate"
                            android:visibility="gone"
                            android:textAppearance="@android:style/TextAppearance.Small"
                            android:textColor="@color/gray01"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />


                        <TextView
                            android:id="@+id/navDrawerWeatherTemp"
                            android:textColor="@color/gray01"
                            android:layout_alignParentEnd="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:layout_below="@id/navDrawerWeatherDate"
                            android:layout_gravity="center" />

                        <TextView
                            android:id="@+id/navDrawerWeatherDescription"
                            android:textColor="@color/gray01"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_toStartOf="@id/navDrawerWeatherTemp"
                            android:layout_below="@id/navDrawerWeatherDate"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:layout_gravity="center" />
                    </RelativeLayout>

                </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/gray02"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3333">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/nav_drawer_desc_weatherImage"
                    android:id="@+id/imgView1"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@color/grey_transparent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/day1"
                        android:textColor="@color/gray01"
                        android:textAppearance="@android:style/TextAppearance.Small" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/temp1"
                        android:textColor="@color/gray01"
                        android:textAppearance="@android:style/TextAppearance.Small" />
                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/gray02"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3333"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/nav_drawer_desc_weatherImage"
                    android:id="@+id/imgView2"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@color/grey_transparent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray01"
                        android:id="@+id/day2"
                        android:textAppearance="@android:style/TextAppearance.Small" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray01"
                        android:id="@+id/temp2"
                        android:textAppearance="@android:style/TextAppearance.Small"
                        android:layout_marginStart="5dp" />
                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/gray02"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3333">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/nav_drawer_desc_weatherImage"
                    android:id="@+id/imgView3"
                    android:layout_gravity="center" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@color/grey_transparent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray01"
                        android:id="@+id/day3"
                        android:textAppearance="@android:style/TextAppearance.Small" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray01"
                        android:id="@+id/temp3"
                        android:textAppearance="@android:style/TextAppearance.Small"
                        android:layout_marginStart="5dp" />
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>