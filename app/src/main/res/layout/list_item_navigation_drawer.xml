<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:background="@drawable/selector_list_item"
   android:minHeight="?android:attr/listPreferredItemHeightSmall"
   android:padding="10dp">

   <ImageView
      android:id="@+id/navDrawerImageView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_marginEnd="10dp"
      android:contentDescription="@string/nav_drawer_item_desc_icon" />

   <TextView
      android:id="@+id/navDrawerTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_marginEnd="10dp"
      android:layout_toEndOf="@+id/navDrawerImageView"
      android:textSize="16sp"
      android:textColor="@color/color_item_drawer" />

</RelativeLayout>