<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gruppe1.pem.challengeme.views.NewCategoryActivity">

    <LinearLayout
        android:id="@+id/categoryNameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <TextView
            android:text="Name:"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"/>
        <EditText
            android:id="@+id/categoryName"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="18sp"
            android:hint="Add Category Name" />
    </LinearLayout>

    <View
        android:id="@+id/categoryNameDivider"
        android:layout_below="@id/categoryNameLayout"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"/>

    <LinearLayout
        android:id="@+id/categoryDefaultSizeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/categoryNameDivider"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Default size:"
            android:textSize="18sp"/>
        <Spinner
            android:id="@+id/categoryDefaultSize"
            android:layout_width="fill_parent"
            android:layout_height="60dp">
        </Spinner>
    </LinearLayout>

    <View
        android:id="@+id/categoryDefaultSizeDivider"
        android:layout_below="@id/categoryDefaultSizeLayout"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"/>

    <LinearLayout
        android:id="@+id/categoryIconLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/categoryDefaultSizeDivider"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Icon:"
            android:textSize="18sp"/>
        <ImageView
            android:id="@+id/categoryIcon"
            android:src="@drawable/kleiderbuegel"
            android:layout_width="80dp"
            android:layout_height="80dp">
        </ImageView>
    </LinearLayout>

    <View
        android:layout_below="@id/categoryIconLayout"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"/>

</RelativeLayout>
