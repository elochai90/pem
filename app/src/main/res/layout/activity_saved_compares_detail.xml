<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.gruppe1.pem.challengeme.SavedComparesDetailActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"><![CDATA[>
        ]]></LinearLayout>

    <ImageView

        android:layout_width="150dp"
        android:layout_height="180dp"
        android:id="@+id/detail1oben"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
         />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:id="@+id/detail2unten"
        android:layout_below="@+id/detail1oben"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Title TextView 1"
        android:id="@+id/titleTextView1"
        android:layout_alignTop="@+id/detail1oben"
        android:layout_centerHorizontal="true"
        android:layout_toEndOf="@+id/detail1oben"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Title TextView 2"
        android:id="@+id/titleTextView2"
        android:layout_alignTop="@+id/detail2unten"
        android:layout_centerHorizontal="true"
        android:layout_toEndOf="@+id/detail2unten" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name Item 1"
        android:id="@+id/nameItem1"
        android:layout_below="@+id/titleTextView1"
        android:layout_toEndOf="@+id/detail1oben"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameItem1"
        android:text="Category"
        android:id="@+id/categorieTextView1"
        android:layout_gravity="right"
        android:layout_toEndOf="@+id/detail1oben" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attribut1"
        android:layout_toEndOf="@+id/detail1oben"
        android:id="@+id/attributTextView11"
        android:layout_below="@+id/categorieTextView1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name Item 2"
        android:id="@+id/nameItem2"
        android:layout_below="@+id/titleTextView2"
        android:layout_toEndOf="@+id/detail2unten"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category"
        android:layout_toEndOf="@+id/detail2unten"
        android:id="@+id/categorieTextView2"
        android:layout_below="@+id/nameItem2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attribut1"
        android:layout_toEndOf="@+id/detail2unten"
        android:id="@+id/attributTextView21"
        android:layout_below="@+id/categorieTextView2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saved: TT:MM:JJJJ"
        android:id="@+id/timeStampSavedCompare"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center" />


</RelativeLayout>
