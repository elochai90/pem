
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.gruppe1.pem.challengeme.CategoriesItemDetailFragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/itemDetailNameValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="20dp"
        android:text="Test Name"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/white"
        android:background="@color/background_floating_material_dark" />

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_below="@id/itemDetailNameValue"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:background="@android:color/darker_gray"
                android:id="@+id/itemDetailImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@mipmap/addcamera2"
                android:scaleType="centerCrop" />


            <LinearLayout
                android:id="@+id/itemDetailRating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_below="@id/itemDetailImage"
                android:layout_gravity="center_horizontal"
                android:background="@color/background_floating_material_dark"
                android:weightSum="1">

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:id="@+id/ratingBar" />

            </LinearLayout>


            <com.github.clans.fab.FloatingActionButton
                xmlns:fab="http://schemas.android.com/apk/res-auto"
                android:layout_alignParentRight="true"
                android:id="@+id/edit_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-35dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_edit"
                android:layout_above="@id/itemDetailRating"
                android:layout_gravity="bottom|right"/>




            <LinearLayout
                android:id="@+id/itemDetailAttributes"
                android:layout_below="@id/itemDetailRating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>