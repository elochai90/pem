<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:theme="@style/AppThemeSearch"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        app:elevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:minHeight="@dimen/abc_action_bar_default_height_material"/>

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp">
            <ImageButton
                android:id="@+id/filterCategory"
                android:layout_marginEnd="5dp"
                android:background="@drawable/icon_category_circle"
                android:scaleType="centerInside"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <ImageButton
                android:id="@+id/filterWishlist"
                android:layout_marginEnd="5dp"
                android:background="@drawable/icon_wishlist_circle"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <ImageButton
                android:id="@+id/filterRating"
                android:layout_marginEnd="5dp"
                android:background="@drawable/icon_rating_circle"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <ImageButton
                android:id="@+id/filterColor"
                android:layout_marginEnd="5dp"
                android:background="@drawable/icon_color_circle"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/filterRatingLayout"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="10dp"
            android:orientation="horizontal">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/filterColorLayout"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/filterColorLayoutFirstLine"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/filterColorLayoutSecondLine"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp">
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/filterCategoryLayout"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/filterCategoryLayoutFirstLine"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/filterCategoryLayoutSecondLine"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp">
            </LinearLayout>
        </LinearLayout>
    </android.support.design.widget.AppBarLayout>
    <include
        layout="@layout/default_recycler_view"/>
</LinearLayout>