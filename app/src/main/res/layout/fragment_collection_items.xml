<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   app:layout_behavior="@string/appbar_scrolling_view_behavior">

   <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:fillViewport="true">

      <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical">

         <ImageView
            android:id="@+id/itemDetailImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@android:color/darker_gray"
            android:contentDescription="@string/new_item_desc_itemImage"
            android:scaleType="centerCrop"
            android:src="@mipmap/addcamera2" />

         <LinearLayout
            android:id="@+id/itemDetailRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/itemDetailImage"
            android:layout_gravity="center_horizontal"
            android:background="@color/primary"
            android:gravity="center_horizontal"
            android:weightSum="1">

            <RatingBar
               android:id="@+id/ratingBar"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:numStars="5"
               android:stepSize="1.0" />

         </LinearLayout>

         <android.support.design.widget.TextInputLayout
            android:id="@+id/itemNameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/itemDetailRating">

            <EditText
               android:id="@+id/itemName"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="@string/new_item_label_name" />

         </android.support.design.widget.TextInputLayout>

         <LinearLayout
            android:id="@+id/itemDetailAttributes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/itemNameLayout"
            android:orientation="vertical">

            <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:paddingLeft="10dp"
               android:paddingRight="10dp">

               <TextView
                  android:id="@+id/attrCategoryName"
                  android:layout_width="150dp"
                  android:layout_height="40dp"
                  android:layout_gravity="center_vertical"
                  android:gravity="center_vertical"
                  android:textSize="18sp" />

               <TextView
                  android:id="@+id/attrCategoryValue"
                  android:layout_width="fill_parent"
                  android:layout_height="30dp"
                  android:layout_gravity="center_vertical"
                  android:background="@color/gray01"
                  android:gravity="center"
                  android:textColor="@android:color/black"
                  android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:paddingLeft="10dp"
               android:paddingRight="10dp">

               <TextView
                  android:id="@+id/attrColorName"
                  android:layout_width="150dp"
                  android:layout_height="40dp"
                  android:layout_gravity="center_vertical"
                  android:gravity="center_vertical"
                  android:textSize="18sp" />

               <TextView
                  android:id="@+id/attrColorValue"
                  android:layout_width="fill_parent"
                  android:layout_height="30dp"
                  android:layout_gravity="center_vertical"
                  android:background="@color/gray01"
                  android:gravity="center"
                  android:textColor="@android:color/black"
                  android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:paddingLeft="10dp"
               android:paddingRight="10dp">

               <TextView
                  android:id="@+id/attrWishlistName"
                  android:layout_width="150dp"
                  android:layout_height="wrap_content"
                  android:textSize="18sp" />

               <Switch
                  android:id="@+id/attrWishlistValue"
                  android:layout_width="wrap_content"
                  android:layout_height="40dp"
                  android:checked="false"
                  android:showText="true"
                  android:textOff="@string/switch_false"
                  android:textOn="@string/switch_true" />
            </LinearLayout>
         </LinearLayout>

      </RelativeLayout>
   </ScrollView>

</RelativeLayout>
