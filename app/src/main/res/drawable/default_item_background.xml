
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_selected="true">
        <shape android:shape="rectangle" >
            <solid android:color="@color/listItems" />
            <stroke
                android:width="2dp"
                android:color="@color/accent" />

            <padding android:left="2dp"
                android:right="2dp"
                android:top="2dp"
                android:bottom="2dp" />
        </shape>
    </item>


    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/listItems" />
            <padding android:left="2dp"
                android:right="2dp"
                android:top="2dp"
                android:bottom="2dp" />
        </shape>
    </item>
</selector>