<resources>
    <!-- inherit from the material theme -->
    <style name="OrgaNice" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/primary</item>
        <item name="android:colorBackground">@color/background</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/accent</item>
        <item name="actionModeBackground">@color/accent</item>
        <item name="android:textViewStyle">@style/OrgaNice.Text.RobotoLight</item>
        <item name="android:editTextStyle">@style/OrgaNice.Text.RobotoLight</item>
    </style>

    <!-- inherit from the material theme -->
    <style name="AppThemeSearch" parent="OrgaNice">
        <item name="actionBarSize">128dp</item>
        <item name="android:actionBarSize">128dp</item>
        <item name="android:toolbarStyle">@style/ToolBarStyle</item>
        <!--<item name="android:height">90dip</item>-->
        <!--<item name="height">90dip</item>-->

    </style>
    <style name="OrgaNice.AppBarLayout" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textAppearance">@style/OrgaNice.Text.RobotoLight</item>
    </style>

    <style name="ToolBarStyle" parent="">
        <item name="android:height">128dp</item>
        <item name="height">128dp</item>
        <!--<item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>-->
        <!--<item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>-->
    </style>


    <style name="TransparentStatusBar" parent="@style/OrgaNice">
        <item name="android:statusBarColor">@color/transparent</item>
    </style>
    <style name="FullscreenTheme" parent="@style/TransparentStatusBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!-- Backward-compatible version of ?android:attr/buttonBarStyle -->
    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <!-- Backward-compatible version of ?android:attr/buttonBarButtonStyle -->
    <style name="ButtonBarButton" />


    <style name="MenuButtonsStyle">
        <item name="fab_shadowColor">#444</item>
        <item name="fab_colorNormal">@color/accent</item>
        <item name="fab_colorPressed">@color/accent_dark</item>
        <item name="fab_colorRipple">@color/accent_dark</item>
    </style>

    <style name="WhiteRatingBar" parent="@android:style/Widget.Material.RatingBar.Small">
        <item name="android:progressTint">@color/gray00_transparent</item>
        <item name="android:secondaryProgressTint">@color/transparent</item>
    </style>

    <style name="RatingBar" parent="Base.Widget.AppCompat.RatingBar">
        <item name="android:scaleX">0.7</item>
        <item name="android:scaleY">0.7</item>
        <item name="android:scaleHeight">0.7</item>
        <item name="android:transformPivotX">0dp</item>
        <item name="android:transformPivotY">0dp</item>
        <!--<item name="android:scaleType">fitStart</item>-->
        <item name="android:secondaryProgressTint">@color/transparent</item>
        <item name="android:backgroundTint">@color/transparent</item>
    </style>

    <style name="AppTheme.TextField" parent="Widget.Design.TextInputLayout" >
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <!--<item name="hintTextAppearance">@style/OrgaNice.Text.RobotoLight</item>-->
        <!--<item name="errorTextAppearance">@style/OrgaNice.Text.RobotoLight</item>-->
    </style>

</resources>