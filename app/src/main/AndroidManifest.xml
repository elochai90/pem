<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gruppe1.pem.challengeme" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-feature android:name="android.hardware.camera" android:required= "true" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".TabsActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CategoriesActivity"
            android:label="@string/title_activity_categories" >
        </activity>
        <activity
            android:name=".CompareActivity"
            android:label="@string/title_activity_compare" >
        </activity>
        <activity
            android:name=".WishlistActivity"
            android:label="@string/title_activity_wishlist" >
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".TabsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gruppe1.pem.challengeme.TabsActivity" />
        </activity>
        <activity
            android:name=".SavedComparesActivity"
            android:label="@string/title_activity_saved_compares"
            android:parentActivityName=".TabsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gruppe1.pem.challengeme.TabsActivity" />
        </activity>
        <activity
            android:name=".SavedComparesDetailActivity"
            android:label="@string/title_activity_saved_compares_detail"
            android:parentActivityName=".SavedComparesActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gruppe1.pem.challengeme.SavedComparesActivity" />
        </activity>
        <activity
            android:name=".NewItemActivity"
            android:label="@string/title_activity_new_item"
            android:parentActivityName=".TabsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gruppe1.pem.challengeme.TabsActivity" />
        </activity>
        <activity
            android:name=".NewCategoryActivity"
            android:label="@string/title_activity_new_category"
            android:parentActivityName=".TabsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gruppe1.pem.challengeme.TabsActivity" />
        </activity>
        <activity
            android:name=".NewAttributeActivity"
            android:label="@string/title_activity_new_attribute"
            android:parentActivityName=".TabsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gruppe1.pem.challengeme.TabsActivity" />
        </activity>
    </application>

</manifest>
