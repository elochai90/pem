<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gruppe1.pem.challengeme"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.android.tools.fd.runtime.BootstrapApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.gruppe1.pem.challengeme.views.TabsFragmentActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.gruppe1.pem.challengeme.views.NewCompareActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_saved_compares"
            android:parentActivityName="com.gruppe1.pem.challengeme.views.TabsFragmentActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".views.TabsFragmentActivity" />
        </activity>
        <activity
            android:name="com.gruppe1.pem.challengeme.views.SavedComparesDetailActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_saved_compares_detail"
            android:parentActivityName="com.gruppe1.pem.challengeme.views.NewCompareActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".views.NewCompareActivity" />
        </activity>
        <activity
            android:name="com.gruppe1.pem.challengeme.views.NewItemActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_new_item"
            android:parentActivityName="com.gruppe1.pem.challengeme.views.TabsFragmentActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".views.TabsFragmentActivity" />

            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="image/*" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.gruppe1.pem.challengeme.views.NewCategoryActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_new_category"
            android:parentActivityName="com.gruppe1.pem.challengeme.views.TabsFragmentActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".views.TabsFragmentActivity" />
        </activity>
        <activity
            android:name="com.gruppe1.pem.challengeme.views.ItemsListActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_items_list"
            android:parentActivityName="com.gruppe1.pem.challengeme.views.TabsFragmentActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".views.TabsFragmentActivity" />
        </activity>
        <activity
            android:name="com.gruppe1.pem.challengeme.views.CollectionItemsActivity"
            android:configChanges="orientation"
            android:parentActivityName="com.gruppe1.pem.challengeme.views.ItemsListActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".views.ItemsListActivity" />
        </activity>
        <activity
            android:name="com.gruppe1.pem.challengeme.views.SettingsActivity"
            android:configChanges="orientation"
            android:parentActivityName="com.gruppe1.pem.challengeme.views.TabsFragmentActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".views.TabsFragmentActivity" />
        </activity>
        <activity
            android:name="com.gruppe1.pem.challengeme.views.FullscreenImageActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_fullscreen_image"
            android:parentActivityName="com.gruppe1.pem.challengeme.views.CollectionItemsActivity"
            android:theme="@style/FullscreenTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gruppe1.pem.challengeme.views.CollectionItemsActivity" />
        </activity>
        <activity
            android:name="com.gruppe1.pem.challengeme.views.SearchResultsActivity"
            android:configChanges="orientation"
            android:parentActivityName="com.gruppe1.pem.challengeme.views.TabsFragmentActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeSearch" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".views.TabsFragmentActivity" />
            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.SEARCH" /> -->
            <!-- </intent-filter> -->
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
            <meta-data
                android:name="android.app.default_searchable"
                android:value="com.gruppe1.pem.challengeme.views.SearchResultsActivity" />
        </activity>
    </application>

</manifest>