<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

   <PreferenceCategory android:title="@string/language">
      <ListPreference android:entries="@array/language_text"
         android:entryValues="@array/language_text"
         android:key="Language"
         android:title="@string/chooseLanguage"
         />
   </PreferenceCategory>

   <PreferenceCategory android:title="@string/standardSizes">
      <ListPreference android:entries="@array/sizes_text"
         android:entryValues="@array/sizes_text"
         android:key="Tops"
         android:title="@string/tops"
         />

      <ListPreference android:entries="@array/sizes_text"
         android:entryValues="@array/sizes_text"
         android:key="Bottoms"
         android:title="@string/bottoms"
         />

      <ListPreference android:entries="@array/sizes_shoes_text"
         android:entryValues="@array/sizes_shoes_text"
         android:key="Shoes"
         android:title="@string/shoes"
         />
   </PreferenceCategory>

   <PreferenceCategory android:title="@string/favColors">
      <MultiSelectListPreference android:key="favorite_colors"
         android:title="@string/chooseColor"
         />
   </PreferenceCategory>

   <PreferenceCategory android:title="@string/showWishlistItems">
      <CheckBoxPreference android:defaultValue="false"
         android:key="show_wishlist_item_in_compare"
         android:title="@string/showWishlistItems"
         />
   </PreferenceCategory>

</PreferenceScreen>
